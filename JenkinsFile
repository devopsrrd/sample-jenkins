pipeline {
    agent master

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                mvn clean install -DskipTests
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'cd target'
                sh 'java -jar "spring-petclinic-3.3.0-SNAPSHOT.jar"'
            }
        }
    }
}