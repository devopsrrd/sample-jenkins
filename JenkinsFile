pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'               
                sh '/var/tools/apache-maven-3.9.8/bin clean install -DskipTests'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'cd /var/jenkins_home/workspace/petclinic/target'
                sh 'find .'
                sh 'chmod +x spring-petclinic-3.3.0-SNAPSHOT.jar && java -jar spring-petclinic-3.3.0-SNAPSHOT.jar'
            }
        }
    }
}