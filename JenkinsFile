pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'export PATH=$PATH:"/apache-maven-3.9.8/bin"'
                sh '/apache-maven-3.9.8/bin/mvn clean install -DskipTests'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'cd /var/jenkins_home/workspace/petclinic/target'
                sh 'chmod +x spring-petclinic-3.3.0-SNAPSHOT.jar && java -jar spring-petclinic-3.3.0-SNAPSHOT.jar'
            }
        }
    }
}