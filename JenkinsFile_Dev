pipeline {
    agent {label 'build-agent'}

    stages {
        stage('Build') {
            steps {
                echo 'Building maven project'               
                sh '/var/tools/apache-maven-3.9.8/bin/mvn clean install -DskipTests'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
    }
}